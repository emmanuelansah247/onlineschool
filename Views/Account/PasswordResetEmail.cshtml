@model bim_edu.Models.PasswordResetEmailViewModel;

@{
    ViewData["Title"] = "Password Reset Email | Bim-Edu";
    var Email = ViewData["Email"] as string;
}


<section class="page_wrapper">

    <div class="page_container">

            @if(Email == null || Email == ""){
            <div class="status_container">
                    <h1 class="heading"> Veuillez saisir l&#39;adresse électronique associée à votre compte. </h1>
            </div>
            }else{
                <div class="status_container">
                        <h1 class="heading"> Lien de réinitialisation du mot de passe envoyé à @Email </h1>
                        <p class="description"> Un lien de réinitialisation de mot de passe a été envoyé à @Email. Suivez le lien pour réinitialiser votre mot de passe </p>
                </div>
            }

            @if(Email == null || Email == ""){
            <form class="form" asp-controller="Account" asp-method="POST">

                    <div class="ValidationError" asp-validation-summary="All"></div>

                    <div class="input_wrapper">
                        <label class="label" asp-for="Email"></label>
                        <input class="input" type="text" id="Email" name="Email"/>
                        <span class="show_on_error" asp-validation-for="Email"></span>
                    </div>

                    <div class="button_container">
                        <input type="submit" asp-action="PasswordResetEmail" class="button" value="Soumettre"/>
                    </div>

            </form>
            }

        </div>

</section>

@section Scripts{
    <link rel="stylesheet" href="~/css/internal/account/passwordresetemail.css" />
}
