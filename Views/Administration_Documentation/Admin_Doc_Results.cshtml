@model bim_edu.Models.Course;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "How To Use Bim-Edu Questions Page | Admin ";
    List<Course> courses = ViewData["vCourse"] as List<Course>;
}


<section class="admin_page_wrapper">

    <div class="admin_page_container clear_float">

        <div class="note">
                <span class="title"> NOTE: </span> 
                <p class="message">
                    This Section Shows How To Use The RESULTS Page. 
                </p>
        </div>

        <figure class="item">
            <h2 class="heading"> UPLOAD STUDENT RESULT </h2>
            <div class="instructions">

                <p>
                    <span class="number"> 1. </span>
                    <span class="instruction"> Go to the Result Page.
                        <a class="link" asp-controller="Administration" asp-action="AdminStudentResult" target="_blank"> 
                            Click here to go to the page 
                        </a>
                    </span>
                </p>

                <p>
                    <span class="number"> 2. </span>
                    <span class="instruction"> 
                        Select The Student From The 'Student Name' Dropdown List
                    </span>
                </p>

                <p>
                    <span class="number"> 3. </span>
                    <span class="instruction"> 
                        Click On 'Choose File' To Upload The Student Result
                    </span>
                </p>

                <p>
                    <span class="number"> 4. </span>
                    <span class="instruction"> 
                        Enter The Title For The Result In The 'Title' Field
                    </span>
                </p>

                <p>
                    <span class="number"> 5. </span>
                    <span class="instruction"> 
                       Click On 'Add Result' To Save The File
                    </span>
                </p>

            </div>
        </figure>


        <figure class="item">
            <h2 class="heading"> VIEW STUDENT RESULT </h2>
            <div class="instructions">

                <p>
                    <span class="number"> 1. </span>
                    <span class="instruction"> Go to the Result Page.
                        <a class="link" asp-controller="Administration" asp-action="AdminStudentResult" target="_blank"> 
                            Click here to go to the page 
                        </a>
                    </span>
                </p>

                <p>
                    <span class="number"> 2. </span>
                    <span class="instruction"> 
                        Select The Student From The 'Student Name' Dropdown List
                    </span>
                </p>

                <p>
                    <span class="number"> 3. </span>
                    <span class="instruction"> 
                        Click On 'View Results' To Display The Student Results
                    </span>
                </p>

            </div>
        </figure>
    
    </div>

</section>

@section Scripts{
    <link rel="stylesheet" href="~/css/internal/administration_documentation/admin_docs.css" />
}
