@{
    Layout = "~/Views/Shared/_en_Layout.cshtml";
    ViewData["Title"] = " Bim-Edu Drilling Agent Course";
}

<section class="programme_wrapper">
    <div class="programme_container">

        <div class="apply_button_container">
            <a asp-controller="en_Account" asp-action="Register" class="apply_button"> APPLY </a>
        </div>

        <h1 class="main_heading"> Vocational Training  </h1>
        <h2 class="sub_main_heading"> Available at the Center of Excellence </h1>

        <figure class="stand_out">

            <h3 class="medium_heading"> Drilling Agent </h3>
            <div class="sub_stand_out">
                <p class="description"> 
                    This Certificate programme is designed for fresh learners, personnel with little or no prior 
                    experience in drilling and personnel in other fields who wish to start a career in drilling. The 
                    programme of this Certificate has been developed by subject experts and has also been benchmarked 
                    against industry standard. 
                </p>
            </div>

        </figure>


    </div>
</section>


@section scripts{

    <link rel="stylesheet" href="~/css/internal/programmes/voc_training.css"/>

}