@{
    Layout = "~/Views/Shared/_en_Layout.cshtml";
    ViewData["Title"] = " Bim-Edu Mines and Quarry Agent Course";
}

<section class="programme_wrapper">
    <div class="programme_container">

        <div class="apply_button_container">
            <a asp-controller="en_Account" asp-action="Register" class="apply_button"> APPLY </a>
        </div>

        <h1 class="main_heading"> Vocational Training  </h1>
        <h2 class="sub_main_heading"> Available at the Center of Excellence </h1>

        <figure class="stand_out">

            <h3 class="medium_heading"> Mines and Quarry Agent </h3>
            <div class="sub_stand_out">
                <p class="description"> 
                    Mining is the process of extracting buried material below the earth surface. Quarrying 
                    refers to extracting materials directly from the surface. This program is designed to provide the 
                    student with practical knowledge on the Mining and Quarries industry and to get them ready to assist 
                    the sector professionals.
                </p>
            </div>

        </figure>


    </div>
</section>


@section scripts{

    <link rel="stylesheet" href="~/css/internal/programmes/voc_training.css"/>

}