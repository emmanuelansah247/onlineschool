@{
    Layout = "~/Views/Shared/_en_Layout.cshtml";
    ViewData["Title"] = " Bim-Edu Auto Mechanics Course";
}

<section class="programme_wrapper">
    <div class="programme_container">

        <div class="apply_button_container">
            <a asp-controller="en_Account" asp-action="Register" class="apply_button"> APPLY </a>
        </div>

        <h1 class="main_heading"> Vocational Training  </h1>
        <h2 class="sub_main_heading"> Available at the Center of Excellence </h1>

        <figure class="stand_out">

            <h3 class="medium_heading"> Auto Mechanics </h3>
            <div class="sub_stand_out">
                <p class="description"> 
                    An auto mechanic (automotive technician, motor mechanic in) is a mechanic with a variety of automobile makes or 
                    either in a specific area or in a specific make of automobile. In repairing cars, their main role is to diagnose 
                    the problem accurately and quickly. This course trains Assistants that could set up their own business after achieving 
                    a good level of experience in the industry or  they may choose to work under supervision of Engineers.
                </p>
            </div>

        </figure>


    </div>
</section>


@section scripts{

    <link rel="stylesheet" href="~/css/internal/programmes/voc_training.css"/>

}