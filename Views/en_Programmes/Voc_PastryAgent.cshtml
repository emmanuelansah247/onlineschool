@{
    Layout = "~/Views/Shared/_en_Layout.cshtml";
    ViewData["Title"] = " Bim-Edu Pastry Agent Course";
}

<section class="programme_wrapper">
    <div class="programme_container">

        <div class="apply_button_container">
            <a asp-controller="en_Account" asp-action="Register" class="apply_button"> APPLY </a>
        </div>

        <h1 class="main_heading"> Vocational Training  </h1>
        <h2 class="sub_main_heading"> Available at the Center of Excellence </h1>

        <figure class="stand_out">

            <h3 class="medium_heading"> Pastry Agent </h3>
            <div class="sub_stand_out">
                <p class="description"> 
                    As a student of our Pastry Arts Certificate Program, you will have the opportunity to combine business 
                    management and entrepreneurship with classic pastry methods and techniques, uncovering the skill set of 
                    artisan bread baking, cake decorating, confiserie and frozen desserts, menu management, and much more! 
                    This course trains Agents that could set up their own business right after the training.
                </p>
            </div>

        </figure>


    </div>
</section>


@section scripts{

    <link rel="stylesheet" href="~/css/internal/programmes/voc_training.css"/>

}