@model bim_edu.Models.RoleViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Role | Bim-Edu";
}


<section class="page_wrapper clear_float">

    <div class="page_container clear_float">
        <h1 class="page_title"> Admin Role </h1>


            <form class="form" asp-controller="Administration_Two" asp-method="POST">

                   
                    <div class="ValidationError" asp-validation-summary="All"></div>

                    <div class="input_wrapper">
                        <label class="label" for="Rolename"> Role Name </label>
                        <input class="input" type="text" name="Rolename"/>
                        <span class="show_on_error" asp-validation-for="Rolename"></span>
                    </div>

                    <div class="button_container">
                        <input type="submit" asp-action="AdminRoleAdd" class="button" value="Add Role"/>
                    </div>

            </form>
    </div>

</section>

@section Scripts{
    <link rel="stylesheet" href="~/css/internal/administration/adminsimpleform.css" />
}
