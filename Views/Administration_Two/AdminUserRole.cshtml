@model bim_edu.Models.UserRoleViewModel


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin User Role | Bim-Edu";
    List<ApplicationUser> _users = ViewData["users"] as List<ApplicationUser>;
    List<IdentityRole> _roles = ViewData["roles"] as List<IdentityRole>;
}


<section class="page_wrapper clear_float">

    <div class="page_container clear_float">
        <h1 class="page_title"> Admin Users And Roles </h1>


            <form class="form" asp-controller="Administration_Two" asp-method="POST">

                   
                    <div class="ValidationError" asp-validation-summary="All"></div>

                    <div class="input_wrapper">
                        <label class="label" asp-for="UserId"> User Email Address </label>
                        <select class="input" type="text" name="UserId">
                                    @foreach(ApplicationUser user in _users){
                                        <option value=@user.Id >
                                            @user.UserName 
                                        </option>
                                     }
                        </select>
                        <span class="show_on_error" asp-validation-for="UserId"></span>
                    </div>

                    <div class="input_wrapper">
                        <label class="label" asp-for="RoleId"> Role Name</label>
                        <select class="input" type="text" name="RoleId">
                                    @foreach(IdentityRole role in _roles){
                                        <option value=@role.Id >
                                            @role.Name
                                        </option>
                                     }
                        </select>
                        <span class="show_on_error" asp-validation-for="RoleId"></span>
                    </div>

                    <div class="button_container">
                        <input type="submit" asp-action="AdminUserRoleAdd" class="button" value="Add User To Role"/>
                    </div>

            </form>

    </div>

</section>

@section Scripts{
    <link rel="stylesheet" href="~/css/internal/administration/adminsimpleform.css" />
}
