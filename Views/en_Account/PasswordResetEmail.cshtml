@model bim_edu.Models.PasswordResetEmailViewModel;

@{
    Layout = "~/Views/Shared/_en_Layout.cshtml";
    ViewData["Title"] = "Password Reset Email | Bim-Edu";
    var Email = ViewData["Email"] as string;
}


<section class="page_wrapper">

    <div class="page_container">

            @if(Email == null || Email == ""){
            <div class="status_container">
                    <h1 class="heading"> Please Enter The Email Associated With Your Account</h1>
            </div>
            }else{
                <div class="status_container">
                        <h1 class="heading"> Password Reset Link Sent To @Email </h1>
                        <p class="description"> A password reset link has been sent to @Email. Follow the link to reset your password </p>
                </div>
            }

            @if(Email == null || Email == ""){
            <form class="form" asp-controller="Account" asp-method="POST">

                    <div class="ValidationError" asp-validation-summary="All"></div>

                    <div class="input_wrapper">
                        <label class="label" asp-for="Email"></label>
                        <input class="input" type="text" id="Email" name="Email"/>
                        <span class="show_on_error" asp-validation-for="Email"></span>
                    </div>

                    <div class="button_container">
                        <input type="submit" asp-action="PasswordResetEmail" id="PasswordResetEmail" class="button" value="Submit"/>
                    </div>

            </form>
            }

        </div>

</section>

@section Scripts{
    <link rel="stylesheet" href="~/css/internal/account/passwordresetemail.css" />
}
